<div class="w-100 w-80-m w-70-l center mt4 tiledbg">
  <div class="pa0 pa2-ns pa4-m pa5-l">
    <div class="center bg-white pa2 pa3-l">

      <div class="w-100 bb b--silver mb3 cf">
        <h1 class="helvetica fw4 navy mb0 pr2 bb b--navy fl">Forgot your password?</h1>
      </div>

      <%= bootstrap_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
        <%= devise_error_messages! %>

          <%= f.email_field :email, autofocus: true %>
          <%= f.submit "Send me reset password instructions" %>
      <% end %>
    </div>
  </div>
</div>
